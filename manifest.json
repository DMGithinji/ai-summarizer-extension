{
  "manifest_version": 3,
  "name": "Free Youtube & Web AI Summarizer",
  "version": "2.0",
  "description": "Instantly summarize any webpage or YouTube video using your existing AI accounts (ChatGPT, Claude, or Gemini). Save time with one-click summaries - no additional subscription required.",
  "permissions": ["activeTab", "clipboardRead", "clipboardWrite", "scripting", "storage"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://*.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "options_page": "options.html",
  "icons": {
    "48": "assets/icons/icon48.png"
  },
  "action": {
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://www.youtube.com/*",
        "https://*.google.com/*",
        "https://youtube.com/*",
        "https://figma.com/*"
      ],
      "js": ["webSummarizer.js"]
    },
    {
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["aiPasteHandler.js"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["youtubeSummarizer.css"],
      "js": ["youtubeSummarizer.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}