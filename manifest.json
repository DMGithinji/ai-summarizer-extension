{
  "manifest_version": 3,
  "name": "Free Website AI Summarizer",
  "version": "1.0",
  "description": "A FREE Website AI summarizer that uses your own AI subscription",
  "permissions": ["activeTab", "clipboardRead", "clipboardWrite", "scripting", "storage"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://*.youtube.com/*"
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://www.youtube.com/*",
        "https://*.google.com/*",
        "https://youtube.com/*",
        "https://figma.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"]
    },
    {
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["inject-prompt.js"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["youtube-handler.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}