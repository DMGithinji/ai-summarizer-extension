{
  "manifest_version": 3,
  "name": "justTLDR: Free AI Summarizer for YouTube and Web",
  "version": "2.0.4",
  "description": "Instantly summarize webpages or YouTube video using your existing AI accounts (ChatGPT, etc) - no additional subscription required!",
  "permissions": ["activeTab", "clipboardRead", "clipboardWrite", "storage"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*",
    "https://*.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "options_page": "options.html",
  "icons": {
    "48": "assets/icons/icon48.png"
  },
  "action": {
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "http://localhost/*",
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*",
        "https://www.youtube.com/*",
        "https://*.google.com/*",
        "https://*.brave.com/*",
        "https://*.youtube.com/*",
        "https://figma.com/*",
        "https://excalidraw.com/*",
        "https://*.amazon.com/*",
        "https://*.facebook.com/*",
        "https://*.instagram.com/*",
        "https://*.linkedin.com/*",
        "https://*.microsoft.com/*",
        "https://*.netflix.com/*",
        "https://*.pinterest.com/*",
        "https://*.twitch.tv/*",
        "https://*.twitter.com/*"
      ],
      "js": ["webSummarizer.js"]
    },
    {
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*"
      ],
      "js": ["aiPasteHandler.js"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["youtubeSummarizer.css"],
      "js": ["youtubeSummarizer.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}